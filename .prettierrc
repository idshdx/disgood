{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": [
        "*.html",
        "*.css",
        "*.scss",
        "*.sass",
        "*.js",
        "*.ts",
        "*.mjs",
        "*.cjs",
        "*.mdx"
      ],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "singleQuote": false,
        "trailingComma": "none",
        "printWidth": 120,
        "semi": true
      }
    },
    {
      "files": "./astro.config.ts",
      "options": {
        "printWidth": 120
      }
    }
  ],
  "singleQuote": false
}
