{
  "include": ["*.config.ts"],
  "references": [
    {
      "path": "./plugins/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./config.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["ESNext"]
  }
}
